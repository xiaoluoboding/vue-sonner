{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "declarationDir": "./temp",
    "moduleResolution": "Node",
    "baseUrl": "./"
  },
  "vueCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "include": [
    "src/packages/**/*.ts",
    "src/packages/**/*.d.ts",
    "src/packages/**/*.tsx",
    "src/packages/**/*.vue"
  ]
}
